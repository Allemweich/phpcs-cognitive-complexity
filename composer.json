{
    "name"       : "rarst/phpcs-cognitive-complexity",
    "description": "Cognitive complexity implementation for PHP_CodeSniffer",
    "keywords"   : [
        "phpcs",
        "standards",
        "static analysis"
    ],
    "type"       : "phpcodesniffer-standard",
    "license"    : "MIT",
    "authors"    : [
        {
            "name"    : "Andrey Savchenko",
            "homepage": "https://www.Rarst.net/"
        }
    ],
    "support"    : {
        "source": "https://github.com/Rarst/phpcs-cognitive-complexity",
        "issues": "https://github.com/Rarst/phpcs-cognitive-complexity/issues"
    },
    "require"    : {
        "php": "^8.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "pds/skeleton"             : "^1.0",
        "phpunit/phpunit"          : "^9.5"
    },
    "suggest"    : {
        "dealerdirect/phpcodesniffer-composer-installer": "Installer plugin for automatic standard registration."
    },
    "config": {
        "platform": {
            "php": "8.0"
        }
    }
}
